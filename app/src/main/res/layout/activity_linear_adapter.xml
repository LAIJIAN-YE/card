<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_set"
    android:id="@+id/linear"
    android:padding="10dp"
    >

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:textStyle="bold"
    android:id="@+id/li_num"
    />
    <TextView

        android:id="@+id/Phrase"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Phrase"
        android:textStyle="bold"
        android:textSize="20sp"

        android:textColor="#000000"
        />

    <Button
        android:layout_marginLeft="20dp"
        android:id="@+id/radio_bt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/music"
        ></Button>
    <CheckBox
        android:layout_marginLeft="45dp"
        android:id="@+id/checkBox"
        android:layout_width="50dp"
        android:layout_height="50dp"
        style="@style/CustomCheckboxTheme"
        />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textStyle="italic"
        android:id="@+id/Phrase_kk"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Phrase_kk"
        android:textSize="20sp"
        android:textColor="#660000"
        />
    <TextView

        android:id="@+id/Phrase_ch"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Phrase_ch"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#003342"


        >

    </TextView>

</LinearLayout>
<LinearLayout
    android:layout_marginTop="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        >
    <TextView
    android:id="@+id/Singleword"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Singleword"

    android:textSize="16sp"

    android:textColor="#0000CC"
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Singleword_ch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Singleword_ch"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp">


        </TextView>
    </LinearLayout>
</LinearLayout>